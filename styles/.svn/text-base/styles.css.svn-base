body { font-family:Helvetica, Arial, sans-serif; background:#fff; color:#000; margin:0; padding:0; }
div { font-size:12px; color:#000; }
h1 { font-size:24px; color:#00b0f0; }
h2 { font-size:18px; color:#00b0f0; }
h3 { font-size:16px; color:#00b0f0; }
h4 { font-size:14px; color:#00b0f0; }
p { font-size:12px; color:#000; line-height:20px; }
a { color:#06C; }
a:hover { color:#09F; }
input { background:#fff; border:1px #999 solid; font-size:12px; color:#666; }
textarea { font-family:Helvetica, Arial, sans-serif; background:#fff; border:1px #999 solid; font-size:12px; color:#666; width:500px; height:150px; }
hr { border:1px solid #333; height:1px; }
img { border:none; }
pre { font-family:'Courier New', Monaco, monospace; color:#333; font-size:11px; }
em { color:#666; font-size:11px; }

#submit { background:#92c844; color:#fff; border:1px solid #6a9a24; height:25px; text-shadow: 1px 1px #333; }
#container { margin:0; width:100%; }
#header { width:100%; height:100px; }
#logo { float:left; margin:10px; }
#logout { float:right; margin:10px; }
#navigation { clear:both; width:100%; height:25px; background:url('../images/admin_bg_nav.jpg') repeat-x #fff; color:#fff; padding:11px 0 0 0; }
#navigation ul { list-style:none; display:inline; margin:0 0 0 10px; padding:0; }
#navigation ul li { list-style:none; display:inline; margin:0; padding:0; }
#navigation ul li a { color:#fff; text-decoration:none; padding:9px 10px 11px 10px; text-shadow: 1px 1px #333; outline:none; }
#navigation ul li a:hover { text-decoration:none; background:#fff; color:#333; text-shadow:none; }
#navigation ul li a.active { text-decoration:none; background:#fff; color:#333; text-shadow:none; border-top:1px solid #666; border-right:1px solid #666; border-left:1px solid #666; }
#content { width:100%; }
#content-box { margin:0 auto; padding:20px; }
#login-box { background:#fff; border:#ccc solid 2px; padding:20px; width:300px; margin:0 auto; }
#login-box div { padding:5px; }

.data-label { font-size:12px; color:#666; }
.form-page div { padding:5px; }